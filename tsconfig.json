{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6"
  },
  
  "exclude": [
    "build",
    "node_modules",
    "typings"
  ]
}